<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  <TableLayout
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:stretchColumns="1"
  >
    <TableRow
    >
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Property"
      ></TextView>
      <Spinner
        android:id="@+id/property"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
      >
      </Spinner>
    </TableRow>
    
    <TableRow>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Name"
      ></TextView>
      <EditText
        android:id="@+id/name"
        android:layout_width="200dp"
        android:height="30dp"
      ></EditText>
    </TableRow>
    
    <TableRow>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Gender"
      ></TextView>
      <RadioGroup
      	android:orientation="horizontal"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      >
      	<RadioButton
      	  android:id="@+id/check_male"
      	  android:layout_width="wrap_content"
      	  android:layout_height="wrap_content"
      	  android:text="Male"
      	></RadioButton>
      	<RadioButton
      	  android:id="@+id/check_female"
      	  android:layout_width="wrap_content"
      	  android:layout_height="wrap_content"
      	  android:text="female"
      	></RadioButton>
      </RadioGroup>
      </TableRow>
       
      <TableRow>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Age"
      ></TextView>
      <EditText
        android:id="@+id/age"
        android:layout_width="200dp"
        android:height="30dp"
      ></EditText>
      </TableRow>
      
      <TableRow>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Andress"
      ></TextView>
      <EditText
        android:id="@+id/andress"
        android:layout_width="200dp"
        android:height="30dp"
      ></EditText>
      </TableRow>
        
      <TableRow>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Email"
      ></TextView>
      <EditText
        android:id="@+id/email"
        android:layout_width="200dp"
        android:height="30dp"
      ></EditText>
      </TableRow>
      
      <TableRow>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Twitter"
      ></TextView>
      <EditText
        android:id="@+id/twitter"
        android:layout_width="200dp"
        android:height="30dp"
      ></EditText>
      </TableRow>
      
      <TableRow>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Facebook"
      ></TextView>
      <EditText
        android:id="@+id/facebook"
        android:layout_width="200dp"
        android:height="30dp"
      ></EditText>  
    </TableRow>
    <TableRow>
	    <ImageButton
	        android:id="@+id/save"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:src="@drawable/save"
	      ></ImageButton>
	    <LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    >
		    <ImageButton
		        android:id="@+id/newp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/newp"
		      ></ImageButton>
		    <ImageButton
		        android:id="@+id/edit"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/edit"
		    ></ImageButton>
		    <ImageButton
		        android:id="@+id/delete"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/delete"
		    ></ImageButton>
	  </LinearLayout>
    </TableRow>
  </TableLayout>
</ScrollView>


